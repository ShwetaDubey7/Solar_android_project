<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="app.activity.AdminDashboardActivity"
    tools:openDrawer="start">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="@string/admin_dashboard_title"
            app:titleTextColor="?attr/colorOnPrimary" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvWelcomeAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="24dp"
                    android:textSize="22sp"
                    tools:ignore="TextContrastCheck"
                    tools:text="Welcome, Admin!" />

                <!-- Manage Users Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManageUsers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_manage_users"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription,ImageContrastCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/manage_users"
                            android:textSize="18sp"
                            tools:ignore="TextContrastCheck" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Manage Installations Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManageInstallations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_manage_installs"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manage_installations"
                            android:textSize="18sp"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Manage Maintenance Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManageMaintenance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_manage_maintenance"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manage_maintenance"
                            android:textSize="18sp"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Manage Products Card (THIS WAS MISSING) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManageProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardElevation="4dp"
                    app:cardCornerRadius="12dp"
                    android:clickable="true"
                    android:focusable="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical"
                        tools:ignore="UseCompoundDrawables">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_shop"
                            app:tint="?attr/colorPrimary"
                            tools:ignore="ContentDescription" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/manage_products"
                            android:textSize="18sp"
                            android:layout_marginStart="16dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/admin_drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>